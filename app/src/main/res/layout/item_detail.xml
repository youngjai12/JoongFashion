<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/detailview_profileimage"
            android:layout_margin="7.5dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/detailview_profilename"
            tools:text="User name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:id="@+id/detailview_contentimage"
        android:scaleType="fitXY"
        android:src="@color/colorDarkGreen"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/detailview_favoriteimage"
            android:src="@drawable/ic_favorite_border"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <ImageView
            android:id="@+id/detailview_commentimage"
            android:src="@drawable/ic_chat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/detailview_favoritecount"
        android:text="좋아요 0개"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/detailview_commenttext"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>